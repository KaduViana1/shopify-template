$bg: {{ settings.background_color}};
$text: {{ settings.text_color}};

*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

a {
  text-decoration: none
}

li {
  list-style: none;
}

body {
  background-color: $bg;
  color: $text;
  padding: 0 200px;
}

header {
  display: flex;
  justify-content: space-between
}

.header-nav {
display: flex;
width: 800px;
justify-content: space-around;
align-items: center;
height: 100%;
}